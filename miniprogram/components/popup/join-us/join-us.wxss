@import "../../../layout/flex.wxss";
.hover{
    opacity: 0.8;
}
.link{
    color: rgb(0, 102, 255);
    text-decoration-line: underline;
}
.title{
    font-size: 38rpx;
    font-weight: bold;
    color: rgb(54, 54, 54);
    margin-top: 30rpx;
}
.text1{
    color: rgb(54, 54, 54);
    width: 85%;
    margin: auto;
    font-size: 28rpx;
    margin-top: 30rpx;
}
.text2{
    color: rgb(117, 117, 117);
    width: 85%;
    margin: auto;
    font-size: 25rpx;
    margin-top: 10rpx;
}
.map{
    background-color: rgb(224, 224, 224);
    width: 85%;
    height: 260rpx;
    border-radius: 20rpx;
    margin: auto;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
}
.button-group{
    width: 85%;
    margin: auto;
    margin-top: 90rpx;
    margin-bottom: 40rpx;
}
.button-a{
    text-align: center;
    width: 20%;
    font-size: 28rpx;
    color:#7D7D7D;
    border-radius: 51rpx;
    padding: 18rpx 30rpx;
    border: #DDDDDD solid 2rpx;
}
.button-b{
    text-align: center;
    width: 55%;
    font-weight: bold;
    font-size: 28rpx;
    color:#333333;
    background-color: #FFC403;
    border-radius: 51rpx;
    padding: 18rpx 30rpx;
    border: #FFC403 solid 2rpx;
}
