@import "../../layout/flex.wxss";
.box{
  width: 100%;
}
.inner-box{
  width:100%;
  margin: 10rpx 0;
}
.item-icon{
  width: 51rpx;
  height: auto;
}
.item-text{
  font-size: 20rpx;
  color: rgb(68, 68, 68);
}
.item{
  height: 92rpx;
  width:110rpx;
  position: relative;
  border-radius: 12rpx;
}
.dot{
  width: 11rpx;
  height: 11rpx;
  border: white 5rpx solid;
  background-color: #E84737;
  border-radius: 100%;
  position: absolute;
  right: 25rpx;
  top: -5rpx;
  font-size: 15rpx;
  color: white;
}
