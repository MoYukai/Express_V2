@import "../../layout/flex.wxss";

.card{
  height: 160rpx;
  width: 100%;
  background-color: white;
  margin: 26rpx 0;
  border-radius: 15rpx;
  overflow: hidden;
}
.title-card-o{
  width: 360rpx;
  height: 100%;
  background-color: #CDA174;
  transform: skew(-15deg);
  position: relative;
  left: -10rpx;
  z-index: 2;
}
.title-card{
  width: 330rpx;
  height: 100%;
  background-color: #3B3128;
  left: -15rpx;
  z-index: 3;
  position: relative;
}
.title-card-left,.title-card-right{
  transform: skew(15deg);
  position: relative;
  left: 25rpx;
  color: #CDA174;
  font-size: 35rpx;
}
.title-card-left{
  margin-left: 33rpx;
}
.title-card-left-title{
  font-size: 30rpx;
  font-weight: bold;
}
.title-card-left-text{
  font-size: 20rpx;
  margin: 10rpx 0;
}
.title-card-right-icon{
  width: 100rpx;
  height: 100rpx;
}
.title-card-right{
  margin-left:10rpx;
}
.text-card-right{
  color: #C1986D;
  background-color: #3B3128;
  font-weight: bold;
  font-size: 25rpx;
  width: 100rpx;
  height: 70rpx;
  border-radius: 12rpx;
  margin-right: 26rpx;
}
.text-card-middle-icon{
  height: 30rpx;
  width: 30rpx;
  margin: 0 15rpx;
}
.text-card-left-money{
  font-size: 32rpx;
  font-weight: bold;
  color: #5A5A5A;
}
.text-card-left-money-LT{
  font-size: 25rpx;
  color:#B4B4B4 ;
  text-decoration: line-through;
}
.text-card{
  width: 100%;
}
.btn-hover{
  background-color: #55473b;

}